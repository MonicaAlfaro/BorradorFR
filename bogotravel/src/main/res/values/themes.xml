<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BorradorFR" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/holo_red_light</item>
        <item name="colorPrimaryVariant">@color/design_default_color_error</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/design_default_color_error</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">#F5F5F5</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Texto_titulo">
        <!-- Primary brand color. -->
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/design_default_color_error</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="Texto_normal">
        <!-- Primary brand color. -->
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Theme.BorradorFR.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BorradorFR.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BorradorFR.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>